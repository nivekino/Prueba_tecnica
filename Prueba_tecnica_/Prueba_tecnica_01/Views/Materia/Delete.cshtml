@model Prueba_tecnica_01.Models.Materia

@{
    ViewData["Title"] = "Delete";
}

<h1 class="txt-title">Eliminar materia</h1>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre de la materia
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreMateria)
        </dd>
        <dt class = "col-sm-2">
            Profesor encargado
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdProfesorNavigation.Nombre)
        </dd>
    </dl>
    
    <div class="form-group section-buttons-2">

        <div class="delete-secc">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        </div>

        <div class="btn-section-trowback">
            <a class="btn-trowback" asp-action="Index">Regresar a la lista</a>
        </div>
    
    </div>
</div>

<partial name="_notificationPartial" />
