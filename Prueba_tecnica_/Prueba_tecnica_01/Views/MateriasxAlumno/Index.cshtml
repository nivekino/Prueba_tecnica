@model IEnumerable<Prueba_tecnica_01.Models.MateriasxAlumno>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nombre del alumno
            </th>
            <th>
                Nombre de la materia
            </th>
            <th>
                Caificacion 1
            </th>
            <th>
                Caificacion 2
            </th>
            <th>
                Caificacion 3
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdAlumnoNavigation.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdMateriaNavigation.NombreMateria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Calificacion1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Calificacion2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Calificacion3)
            </td>
            
