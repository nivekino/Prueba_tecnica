@model IEnumerable<Prueba_tecnica_01.Models.Alumno>

@{
    ViewData["Title"] = "Index";
}

<h1 class="txt-title">Sección de Alumnos</h1>

<div class="btn-secction">
    <a class="btn-create-new" asp-action="Create">Agregar nuevo almuno</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                <a class="btn-edit" asp-action="Edit" asp-route-id="@item.Id"><i class="bx bx-edit"></i></a>
                <a class="btn-delete" asp-action="Delete" asp-route-id="@item.Id"><i class="bx bx-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>

<partial name="_notificationPartial" />