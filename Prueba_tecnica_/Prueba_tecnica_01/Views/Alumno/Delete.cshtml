@model Prueba_tecnica_01.Models.Alumno

@{
    ViewData["Title"] = "Delete";
}

<h1 class="txt-title">Eliminar alumno</h1>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
    </dl>
    
    <div class="form-group section-buttons-2">

        <div class="delete-secc">
            <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        </div>

        <div class="btn-section-trowback">
            <a class="btn-trowback" asp-action="Index">Regresar a la lista</a>
        </div>
    
    </div>

    
</div>

<partial name="_notificationPartial" />